{
  "version": 2,
  "controller": {},
  "workers": [
    {
      "type": "router",
      "realms": [
        {
          "name": "netrunner",
          "roles": [
            {
              "name": "anonymous",
              "permissions": [
                {
                  "uri": "*",
                  "allow": {
                    "call": false,
                    "register": false,
                    "publish": false,
                    "subscribe": false
                  },
                  "disclose": {
                    "caller": true,
                    "publisher": true
                  },
                  "cache": false
                },
                {
                  "uri": "netrunner.auth.*",
                  "allow": {
                    "call": true,
                    "register": false,
                    "publish": false,
                    "subscribe": false
                  },
                  "disclose": {
                    "caller": true,
                    "publisher": true
                  },
                  "cache": false
                },
                {
                  "uri": "netrunner.ping",
                  "allow": {
                    "call": true,
                    "register": false,
                    "publish": false,
                    "subscribe": false
                  },
                  "disclose": {
                    "caller": true,
                    "publisher": true
                  },
                  "cache": false
                }
              ]
            },
            {
              "name": "user",
              "permissions": [
                {
                  "uri": "*",
                  "allow": {
                    "call": true,
                    "register": false,
                    "publish": false,
                    "subscribe": true
                  },
                  "disclose": {
                    "caller": true,
                    "publisher": true
                  },
                  "cache": false
                }
              ]
            },
            {
              "name": "internal",
              "permissions": [
                {
                  "uri": "*",
                  "allow": {
                    "call": true,
                    "register": true,
                    "publish": true,
                    "subscribe": true
                  },
                  "disclose": {
                    "caller": true,
                    "publisher": true
                  },
                  "cache": false
                }
              ]
            }
          ]
        }
      ],
      "transports": [
        {
          "type": "web",
          "endpoint": {
            "type": "tcp",
            "port": 8080
          },
          "paths": {
            "info": {
              "type": "nodeinfo"
            },
            "ws": {
              "type": "websocket",
              "auth": {
                "ticket": {
                  "type": "dynamic",
                  "authenticator": "netrunner.auth.authenticate"
                },
                "anonymous": {
                  "type": "static",
                  "role": "anonymous"
                }
              }
            },
            "internal": {
              "type": "websocket",
              "auth": {
                "ticket": {
                  "type": "static",
                  "principals": {
                    "internal": {
                      "ticket": "${WAMP_INTERNAL_TICKET}",
                      "role": "internal"
                    }
                  }
                }
              }
            }
          }
        }
      ]
    }
  ]
}
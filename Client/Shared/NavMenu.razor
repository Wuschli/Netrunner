<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Netrunner</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="chat" Match="NavLinkMatch.All">Messages</NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="contacts" Match="NavLinkMatch.All">Contacts</NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="wallet" Match="NavLinkMatch.All">Wallet</NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="device" Match="NavLinkMatch.All">Device</NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="net" Match="NavLinkMatch.All">Net</NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="settings" Match="NavLinkMatch.All">Settings</NavLink>
        </li>
        <AuthorizeView Roles="admin">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="admin" Match="NavLinkMatch.All">Admin</NavLink>
            </li>
        </AuthorizeView>
    </ul>
</div>

@code {
    private bool _collapseNavMenu = true;

    private string? NavMenuCssClass => _collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        _collapseNavMenu = !_collapseNavMenu;
    }

}